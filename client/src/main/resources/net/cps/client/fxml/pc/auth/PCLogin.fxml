<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.dialogs.MFXGenericDialog?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane fx:id="root" maxHeight="600.0" maxWidth="960.0" minHeight="400.0" minWidth="800.0" prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.cps.client.controllers.pc.auth.PCLoginController">
    <stylesheets>
        <URL value="@../../../styles/css/utils/GlobalStyles.css" />
        <URL value="@../../../styles/css/pages/PCLogin.css" />
    </stylesheets>
    <styleClass>
        <String fx:value="root" />
        <String fx:value="color-scheme-light" />
    </styleClass>

    <Hyperlink maxHeight="0.0" maxWidth="0.0" styleClass="focus-fix" text="focus-fix" textFill="TRANSPARENT" />

    <MFXScrollPane fx:id="rootScroll" fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <styleClass>
            <String fx:value="root-scroll" />
        </styleClass>

        <VBox fx:id="body" alignment="TOP_CENTER" styleClass="body">
            <VBox alignment="TOP_CENTER" styleClass="body-container">

                <HBox fx:id="goBackButton" disable="true" styleClass="go-back-button" visible="false">
                    <MFXButton contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" text=" ">
                        <styleClass>
                            <String fx:value="button" />
                            <String fx:value="button-icon" />
                        </styleClass>
                        <graphic>
                            <FontAwesomeIconView glyphName="CHEVRON_LEFT" wrappingWidth="27.0" />
                        </graphic>
                    </MFXButton>
                </HBox>

                <VBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="50.0" left="60.0" right="60.0" top="-50.0" />
                    </VBox.margin>
                    <AnchorPane styleClass="logo">
                        <VBox styleClass="logo-wrapper">
                            <Text styleClass="logo-top" text="CITY" textAlignment="CENTER">
                            </Text>
                            <Text styleClass="logo-bottom" text="PARK" textAlignment="CENTER">
                            </Text>
                        </VBox>
                    </AnchorPane>

                    <TextFlow>
                        <styleClass>
                            <String fx:value="wrapper-slogan-text" />
                        </styleClass>
                        <Text text="Park at the best locations and stop wasting time with CityPark, network of smart parking-lots with automated parking robots.">
                            <styleClass>
                                <String fx:value="slogan-text" />
                            </styleClass>
                        </Text>
                    </TextFlow>
                </VBox>

                <VBox styleClass="sheet">

                    <VBox alignment="TOP_CENTER">
                        <Text styleClass="login-title" text="Login" textAlignment="CENTER" />
                        <Text styleClass="sheet-text" text="Welcome! please enter your details." textAlignment="CENTER" />
                        <VBox.margin>
                            <Insets bottom="40.0" />
                        </VBox.margin>
                    </VBox>

                    <VBox alignment="CENTER" styleClass="login-form">
                        <VBox.margin>
                            <Insets bottom="20.0" />
                        </VBox.margin>
                        <MFXButton fx:id="guestBtn" onAction="#guestBtnClickHandler" text="Continue As Guest">
                            <styleClass>
                                <String fx:value="button" />
                            </styleClass>
                            <graphic>
                                <FontAwesomeIconView glyphName="USER" />
                            </graphic>
                        </MFXButton>
                    </VBox>

                    <HBox alignment="CENTER" styleClass="login-div">
                        <VBox.margin>
                            <Insets bottom="20.0" />
                        </VBox.margin>
                        <Line endX="60.0" />
                        <Text styleClass="sheet-text" text="  or use your account  " textAlignment="CENTER" />
                        <Line endX="60.0" />
                    </HBox>

                    <VBox alignment="CENTER" spacing="16.0" styleClass="login-form">
                        <VBox.margin>
                            <Insets bottom="30.0" />
                        </VBox.margin>
                        <MFXTextField fx:id="emailField" floatMode="BORDER" floatingText="Email" />
                        <MFXPasswordField fx:id="passwordField" allowCopy="true" allowCut="true" allowPaste="true" floatMode="BORDER" floatingText="Password" />
                        <TextFlow textAlignment="RIGHT">
                            <VBox.margin>
                                <Insets bottom="-5.0" top="-5.0" />
                            </VBox.margin>
                            <Hyperlink fx:id="forgotPasswordLink" onMouseClicked="#forgotPasswordLinkClickHandler" alignment="CENTER_RIGHT" styleClass="forgot-password-link" text="Forgot password?" />
                        </TextFlow>
                        <MFXButton fx:id="loginBtn" contentDisplay="RIGHT" onAction="#loginBtnClickHandler" text="Login">
                            <styleClass>
                                <String fx:value="button" />
                                <String fx:value="button-primary" />
                            </styleClass>
                            <graphic>
                                <FontAwesomeIconView glyphName="CHEVRON_RIGHT" />
                            </graphic>
                        </MFXButton>
                    </VBox>
                    <HBox alignment="CENTER" styleClass="sign-up-wrapper">
                        <Text styleClass="sheet-text" text="Don't have an account? " textAlignment="CENTER" />
                        <Hyperlink fx:id="signUpLink" alignment="CENTER_RIGHT" onAction="#signUpLinkClickHandler" text="Sign up now">
                            <styleClass>
                                <String fx:value="sign-up-link" />
                                <String fx:value="sheet-text" />
                            </styleClass>
                        </Hyperlink>
                        <VBox.margin>
                            <Insets bottom="20.0" />
                        </VBox.margin>
                    </HBox>

                </VBox>

            </VBox> <!-- /body-container -->
        </VBox> <!-- /body -->
    </MFXScrollPane> <!-- /root-scroll -->

    <VBox fx:id="dialogRoot" alignment="CENTER" disable="true" styleClass="dialog-root" visible="false"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <MFXGenericDialog fx:id="dialogControl" actionsOrientation="VERTICAL" contentText="..."
                          headerText="Dialog Title" onClose="#closeDialog" showAlwaysOnTop="false" showMinimize="false">
            <styleClass>
                <String fx:value="dialog"/>
                <String fx:value="dialog-w-xs"/>
            </styleClass>
            <center>
                <MFXScrollPane fitToHeight="true" fitToWidth="true" styleClass="dialog-content-scroll"
                               BorderPane.alignment="CENTER">
                    <VBox>
                        <TextFlow fx:id="dialogContent" styleClass="dialog-content"/>
                        <VBox fx:id="dialogCustomContent"/>
                    </VBox>
                </MFXScrollPane>
            </center>
            <bottom>
                <HBox fx:id="dialogAction" alignment="CENTER_RIGHT" styleClass="dialog-action"
                      BorderPane.alignment="CENTER"/>
            </bottom>
        </MFXGenericDialog>
    </VBox>

</AnchorPane>
